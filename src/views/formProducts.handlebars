<h2 class="titleFormProduct">Enter product</h2>
{{! products form }}
<section class="container-sm form-container">
  {{!-- form --}}
  <form class="formProducts" id="productForm">

    <div class="row mb-3">
      <label
        class="labelProduct col col-form-label col-form-label-lg"
      >Name:</label>
      <div class="row-sm-10">
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Add product name"
        />
      </div>
    </div>

    <div class="row mb-3">
      <label
        class="labelProduct col col-form-label col-form-label-lg"
      >Description:</label>
      <div class="row-sm-10">
        <input
          type="text"
          name="description"
          id="description"
          class="form-control"
          placeholder="Add product description"
        />
      </div>
    </div>

        <div class="row mb-3">
      <label
        class="labelProduct col col-form-label col-form-label-lg"
      >Code:</label>
      <div class="row-sm-10">
        <input
          type="number"
          name="code"
          id="code"
          class="form-control"
          placeholder="Add product code (only numbers)"
        />
      </div>
    </div>

    <div class="row mb-3">
      <label
        class="labelProduct col col-form-label col-form-label-lg"
      >Price:</label>
      <div class="row-sm-10">
        <input
          type="number"
          name="price"
          id="price"
          class="form-control"
          placeholder="Add product price (only numbers)"
        />
      </div>
    </div>

        <div class="row mb-3">
      <label
        class="labelProduct col col-form-label col-form-label-lg"
      >Stock:</label>
      <div class="row-sm-10">
        <input
          type="number"
          name="stock"
          id="stock"
          class="form-control"
          placeholder="Add product stock (only numbers)"
        />
      </div>
    </div>

    <div class="row mb-3">
      <label class="labelProduct col col-form-label col-form-label-lg">Image
        URL:</label>
      <div class="row-sm-10">
        <input
          type="text"
          name="thumbnail"
          id="thumbnail"
          class="form-control"
          placeholder="Add product thumbnail"
        />
      </div>
    </div>

    <button type="submit" class="btn btn-success">Send</button>

  </form>
</section>
<section class="chatContainer">
  <h3 class="titleChat">Chat service</h3>
  <div id="chatContent" class="card chatContent"></div>
  <label for="chatInput" class="chatLabel">Write a message</label>
  <div class="chatInput">
    <div class="wrapper">
      <span class="material-symbols-outlined">
        verified_user
      </span>
      <div class="verifiedPopover" id="verifiedPopover"><p>verified user</p></div>
    </div>
    <textarea
      class="textarea"
      name="chatInput"
      id="chatInput"
      placeholder="write a message to interact with the chat"
      cols="30"
      rows="10"
    ></textarea>
    <button class="btn btn-success" onclick="submitChat()"><span
        class="material-symbols-outlined"
      >
        reply
      </span></button>
  </div>
</section>
{{! scripts import }}
{{> importScripts }}
<script src="/socket.io/socket.io.js"></script>
<script src="user.js"></script>
<script src="formProducts.js"></script>
<script src="chat.js"></script>