<h3 class="titleProducts">
  List of products
  <small class="text-muted">In table format</small>
</h3>
<table class="table table-hover table-dark table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Code</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Thumbnail</th>
    </tr>
  </thead>
  {{#each products}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.code}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
      <td><img
          class="imgProduct"
          src={{this.thumbnail}}
          alt={{this.name}}
        /></td>
    </tr>
  {{/each}}
</table>